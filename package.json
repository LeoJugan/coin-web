{
  "name": "coin-web",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:unit:working": "vitest --config vitest.config.working.ts --run src/__tests__/integration/component-integration.working.spec.ts",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest --coverage",
    "test:unit:watch": "vitest --watch",
    "test:integration": "vitest run src/__tests__/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:unit:coverage && npm run test:e2e",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "type-check-watch": "vue-tsc --build --watch",
    "build-with-type-check": "rimraf dist && npm run type-check && vite build",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write .",
    "prepare": "playwright install"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "@mdi/font": "^7.4.47",
    "axios": "^1.11.0",
    "moment": "^2.30.1",
    "pinia": "^2.1.7",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "vue3-lottie": "^3.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/vite": "^4.1.14",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.5",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.33.0",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "tslib": "^2.8.1",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vite-plugin-vuetify": "^2.1.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4",
    "vuetify": "^3.9.5"
  }
}
